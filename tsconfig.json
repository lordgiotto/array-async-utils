{
  "compilerOptions": {
    "rootDir": "src",
    "target": "ES2019",
    "moduleResolution": "Node",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    // TypeChecking
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}
