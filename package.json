{
  "name": "array-async-utils",
  "version": "1.0.0",
  "description": "Array map, filter, flatMap, etc. with async callback and predicate",
  "main": "index.js",
  "author": "Lorenzo Zottar <lordgiotto@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "run-p build:*",
    "build:cjs": "tsc -p ./tsconfig.build.json --module commonJS --outDir ./dist/cjs",
    "build:esm": "tsc -p ./tsconfig.build.json --module esnext --outDir ./dist/esm",
    "prebuild": "run-s clean:build",
    "clean:build": "rimraf ./dist",
    "test": "jest",
    "test:ui": "majestic",
    "check:all": "run-p -c -l check:ts check:lint check:prettier",
    "check:ts": "tsc --noEmit --pretty",
    "check:lint": "eslint --color ./src",
    "check:prettier": "prettier -u --check .",
    "fix:lint": "eslint ./src --fix",
    "fix:prettier": "prettier -u --write ."
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "majestic": "^1.8.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
